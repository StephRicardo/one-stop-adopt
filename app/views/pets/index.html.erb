<h1>All Pets</h1>

	<% @pets.each do |pet| %>
    <p>
  		<%= image_tag("#{pet.photo}", :size => "250x250", :crop => :fill) %>
    	<%= pet.name %>
    	<%= pet.sex %>
    	<%= pet.age %>
    	<%= link_to "Pet Details", "pets/#{pet.id}" %>
      <%= link_to like_path(pet.id) do %>
        <i class="fa fa-heart" aria-hidden="true" style="color:<%#= current_user.selected_pets.find_by(pet_id: pet.id).is_liked ? "red" : "blue" %>"></i>
      <% end %>
    	
    </p>

  <% end %>

